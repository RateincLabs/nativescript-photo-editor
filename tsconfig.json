{
    "compilerOptions": {
        "noEmitOnError": true,
        "noEmitHelpers": true,
        "experimentalDecorators": true,
        "target": "es5",
        "module": "commonjs",
        "outDir": "bin/dist",
        "moduleResolution": "node",
        "lib": [
            "es6",
            "dom",
            "es2015.iterable"
        ],
        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "*": [
                "./node_modules/tns-core-modules/*",
                "./node_modules/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "demo",
        "bin"
    ]
}
